<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/anh1"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/advantage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/title"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ưu điểm của ứng dụng"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/anh1"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17dp"/>
    <TextView
        android:id="@+id/text1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiện lợi dễ dàng cho người dùng"
        android:gravity="center"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/title"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Và hỗ trợ người dùng quản lý thư viện đơn giản"
        android:gravity="center"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/text1"/>
</androidx.constraintlayout.widget.ConstraintLayout>