<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="10"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_weight="9"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvMaPhieuMuon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã phiếu mượn"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvThanhVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành viên: Nguyễn Tiến Phước"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTenSach"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tên sách: Lập trình Java nâng cao"
                android:textSize="20dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvTrangThai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã trả sách"
                android:textSize="20dp"
                android:textColor="@color/black"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTienThue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tiền thuê: 2500"
                android:textSize="20dp"
                android:layout_marginEnd="40dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvNgayThue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày thuê: 10/12/2023"
                android:textSize="20dp"
                android:textColor="@color/black"/>

    </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/btnDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:src="@mipmap/ic_laucher_dele"/>
</LinearLayout>