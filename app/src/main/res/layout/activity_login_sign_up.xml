<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_SignUp"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/security"
        android:padding="20dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="caodang.fpt.edu.vn"
        android:textColor="@color/black"
        android:letterSpacing="0.5"
        android:layout_marginBottom="30dp"/>
    <LinearLayout
        android:id="@+id/backgroundLogin_Signup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="35dp"
        android:background="@drawable/background_signup_login">
        <Button
            android:id="@+id/btnLoginSplash"
            android:text="Đăng nhập"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textColor="@color/white"
            android:background="@drawable/button_signup_login"/>
        <Button
            android:id="@+id/btnSignUpSplash"
            android:text="Đăng ký"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_signup_login"/>
    </LinearLayout>
</LinearLayout>